<Window x:Class="TestEmguCV.Views.SelectCamDeviceWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestEmguCV.Views"
        mc:Ignorable="d"
        Title="Select Camera Device" Height="450" Width="800" Background="WhiteSmoke"
        Loaded="Window_Loaded">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button x:Name="BtCamAutoDetect" Content="Auto detect" Margin="3 0 3 3" Width="72" Click="BtCamAutoDetect_Click"/>
        </StackPanel>
        
        <ListView x:Name="LvCameras" ItemsSource="{Binding CameraInfos}"
                  Margin="3" SizeChanged="ListView_SizeChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Index" DisplayMemberBinding="{Binding Index}"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Width" DisplayMemberBinding="{Binding Width}"/>
                    <GridViewColumn Header="Height" DisplayMemberBinding="{Binding Height}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
