<Window x:Class="TestOpenCVSharp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestOpenCVSharp4"
        mc:Ignorable="d"
        Title="Test OpenCVSharp4" Height="450" Width="800" Background="WhiteSmoke">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" Margin="2 1">
                <MenuItem x:Name="MniFileConfig" Header="Configuration..." Click="MniFileConfig_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Bottom" Background="DodgerBlue">
            <TextBlock x:Name="LblCycle" Text="FPS:" Margin="2 1" Foreground="White"/>
        </StackPanel>
        
        <Image Name="CameraImage" Stretch="Uniform" Width="640" Height="360"/>
    </DockPanel>
</Window>
